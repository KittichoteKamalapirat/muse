[
  {
    "name": "production",
    "type": "postgres",
    "entities": ["dist/entities/*.js"],
    "migrations": ["dist/migrations/*.js"],
    "logging": true,
    "synchronize": false
  },
  {
    "name": "development",
    "type": "postgres",
    "host": "localhost",
    "port": 5432,
    "entities": ["dist/entities/*.js"],
    "migrations": ["dist/migrations/*.js"],
    "seeds": ["dist/db/seeds/**/*{.js}"],
    "factories": ["dist/factories/**/*{.js}"],
    "logging": false,
    "synchronize": true
  },
  {
    "name": "test",
    "type": "postgres",
    "host": "localhost",
    "port": 5432,
    "entities": ["dist/entities/*.js"],
    "dropSchema": true,
    "migrations": ["src/migrations/*.js"],
    "logging": false,
    "synchronize": true
  }
]
